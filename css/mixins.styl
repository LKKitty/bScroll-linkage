a,body,html
  -webkit-tap-highlight-color:transparent;
// 背景图
bg-img($url)
  background: url($url) no-repeat center
  background-size: 100% 100%

// 充满元素的背景图
full-img($url)
  width: image-size($url)[0]
  height: image-size($url)[1]
  background: url($url) no-repeat center
  background-size: 100% 100%

// 单行文本溢出
single-line()
  overflow: hidden
  text-overflow: ellipsis
  white-space: nowrap

// 多行文本溢出, 默认两行
multi-line($n = 2)
  overflow: hidden
  display: -webkit-box
  -webkit-line-clamp: $n
  -webkit-box-orient: vertical

// 聚焦隐藏placeholder
hide-placeholder()
  &:focus::-webkit-input-placeholder
    color: transparent
  &:focus::-moz-placeholder
    color: transparent
  &:focus::-moz-placeholder
    color: transparent
  &:focus:-ms-input-placeholder
    color: transparent

// placeholder的颜色
color-placeholder($color)
  &::-webkit-input-placeholder
    color: $color
  &:-moz-placeholder
    color: $color
  &::-moz-placeholder
    color: $color
  &:-ms-input-placeholder
    color: $color

// 扩大点击区域
click-area($size)
  $size = (- $size)
  &::before
    content: '';
    position: absolute;
    top: $size; right: $size;
    bottom: $size; left: $size;

// 定位
-pos(type, args)
  i = 0
  position: unquote(type)
  {args[i]}: args[i + 1] is a 'unit' ? args[i += 1] : 0
  {args[i += 1]}: args[i + 1] is a 'unit' ? args[i += 1] : 0

absolute()
  -pos('absolute', arguments)

fixed()
  -pos('fixed', arguments)

// flex居中
flex-center()
  display: flex
  justify-content: center
  align-items: center

// 滚动条
&::-webkit-scrollbar
  width 10px
  background #ecc29f
  border-radius 10px
&::-webkit-scrollbar-thumb
  width 10px
  background rgba(#c71e09,0.5)
  border-radius 10px

// 返回
.back
  position absolute
  bottom 10px
  left 245px
  display block
  width 329px
  height 129px
  bg-img('../img/back.png')
  &:focus
    outline: none
// pre样式
pre
  width 100%
  overflow auto
  word-wrap break-word
  white-space pre-wrap